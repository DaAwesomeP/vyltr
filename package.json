{
  "name": "vyltr",
  "version": "0.1.0",
  "description": "An API wrapper for the Vultr API",
  "main": "index.js",
  "scripts": {
    "doc": "yuidoc -c .yuidoc.json",
    "test": "NODE_ENV=test ava && xo"
  },
  "engines": {
    "node": ">=7.7.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugomd/vultr-api.git"
  },
  "author": {
    "name": "Hugo Muller-Downing",
    "email": "npmjs@hugo.sx",
    "url": "hu.md"
  },
  "keywords": [
    "vultr",
    "api",
    "wrapper"
  ],
  "xo": {
    "space": true,
    "esnext": true,
    "rules": {
      "camelcase": 0,
      "promise/no-promise-in-callback": 0,
      "array-callback-return": 0,
      "curly": 0,
      "unicorn/no-process-exit": 0
    },
    "ignores": [
      "test/fixtures/**",
      "docs/**"
    ]
  },
  "ava": {
    "verbose": true
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hugomd/vultr-api/issues"
  },
  "homepage": "https://github.com/hugomd/vultr-api#readme",
  "dependencies": {
    "axios": "^0.15.3"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "nock": "^9.0.9",
    "ink-docstrap": "^1.3.0",
    "xo": "^0.18.0",
    "yuidoc-lucid-theme": "^0.1.2"
  }
}
